{% extends "base.html.twig" %}

{% block title %}modification annonce{% endblock %}

{% block content %}

        <h1>Modification d'article</h1>

        <form method="post" action="{{ path('article_modif',{'id': article.id }) }}">

            <div>
                <label for="title">Titre</label>
                <input type="text" id="title" name="title" value="{{ article.name }}">
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text" id="description" name="description" value="{{ article.description }}">
            </div>
            <div>
                <label for="price">Prix</label>
                <input type="number" id="price" name="price" value="{{ article.price }}">
            </div>

            <input type="submit" name="send" value="Envoyer">
        </form>

{% endblock %}