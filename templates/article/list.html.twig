{% extends "base.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block content %}

    <h1>Liste des articles</h1>

    <p>Trier par</p>
    <form method="post" action="{{ path('article_list') }}">
        <select name="category">
            {% for category in categories %}
                <option>{{ category.name }}</option>
            {% endfor %}
        </select>
        <input type="submit">
    </form>

    {% for article in articles %}
        <div class="article panel panel-default">
            <div class="panel-heading">
                <a href="{{ path('article_detail', {'id': article.id}) }}"><h3>{{ article.name }}</h3></a>
                <p>Ajout√© le {{ article.dateCreated|date('d-m-Y H:i:s') }} par {{ article.user.username }}</p>
            </div>
            <div class="panel-body">
                <table class="table">
                    <th>Description</th> <th>Prix</th>
                    <tr>
                        <td class="col-10">{{ article.description }}</td>
                        <td class="col-2">{{ article.price }}</td>
                    </tr>
                </table>
            </div>
        </div>
    {% endfor %}

{% endblock %}